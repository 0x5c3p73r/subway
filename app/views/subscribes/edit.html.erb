<%= render "layouts/page_title", title: t('.title') %>

<div class="mx-auto mt-10 max-w-6xl">
  <div class="overflow-hidden bg-white dark:bg-gray-700 shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-600">
      <h1 class="font-bold text-4xl dark:text-slate-200"><%= t('.title') %></h1>
    </div>

    <%= render "form", subscribe: @subscribe, coach: @coach %>
  </div>

  <div class="mt-2">
    <%= link_to t('coaches.edit.back_to_coach'), edit_coach_path(@coach, locale: I18n.locale), class: "cursor-pointer mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium hover:bg-gray-300 dark:bg-gray-700 dark:text-white dark:hover:bg-gray-500" %>
    <div class="inline-block ml-2">
      <%= button_to t('subscribes.edit.destroy'), coach_subscribe_path(@coach, @subscribe, locale: I18n.locale), method: :delete,
        form: { data: { turbo_confirm: t("subscribes.edit.destroy_confirm") }},
        class: "cursor-pointer mt-2 rounded-lg py-3 px-5 text-white bg-red-600 font-medium dark:bg-red-500 dark:hover:bg-red-400"
      %>
    </div>
  </div>
</div>
